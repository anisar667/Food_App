<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faum.faum_expert.User_Select_SignIn"

    android:background="@drawable/sign_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"

        >



        <ImageButton

            android:id="@+id/BtnCooker"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:textColor="@drawable/buttontext"
            android:background="@drawable/chef_btn"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="453dp"/>

        <ImageButton
            android:id="@+id/btnUser"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="100dp"
            android:layout_marginTop="453dp"
            android:background="@drawable/user_btn"

            android:textColor="@drawable/buttontext" />

        <ImageButton
            android:id="@+id/btnDriver"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:textColor="@drawable/buttontext"
            android:background="@drawable/rider_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="453dp"
             />
    </LinearLayout>
</RelativeLayout>
